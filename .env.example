# CodeQuarry Environment Configuration - EXAMPLE
# Copy this file to .env and fill in your values
# .env is git ignored and should never be committed

# Backend API Configuration
API_ENDPOINT=https://emkc.org/api/v2/piston/execute
NODE_ENV=development
PORT=5000

# Database Configuration (PostgreSQL)
# For local development: Install PostgreSQL and create a database
# For production (Railway): This is provided automatically by Railway
DATABASE_URL=postgresql://username:password@localhost:5432/codequarry

# CORS Configuration
CORS_ORIGIN=http://localhost:4000

# Frontend Configuration (for Vite)
# VITE_API_URL=http://localhost:5000
# For production, set this to your deployed backend URL:
# VITE_API_URL=https://your-backend.example.com

# C Compiler Configuration
COMPILER_LANGUAGE=c
COMPILER_VERSION=10.2.0

# Logging Configuration
LOG_LEVEL=info

# === SECURITY: Admin Authentication ===
# Backend-only passwords (NEVER use VITE_ prefix for sensitive data)
# For local development: set real passwords here
# For production/Cloudflare: set in Cloudflare Workers environment variables
ADMIN_PASSWORD=your_secure_admin_password_here
MOD_PASSWORD=your_secure_mod_password_here
